{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "lib", "**/*spec.ts", ".gitignore"]
}